                        <li>OPUSTILI NÁS</li>
                    </ul>
                    <img id="shelder" src="{$basePath}/images/shelter.jpg">
                    {block timeChangeBanner}
                        <img id="timeChangeBanner" src="{$basePath}/images/3s_banner.jpg">
                    {/block}
                    <img src="{$basePath}/images/200x200.jpg">
                    <img src="{$basePath}/images/200x200.jpg">
